{
  "camera": {
    "camera_index": 0,
    "frame_width": 640,
    "frame_height": 480,
    "camera_fps": 10,
    "auto_exposure": true,
    "brightness": 50,
    "contrast": 50,
    "saturation": 60
  },
  "gpio": {
    "motor_enable_pin": 18,
    "motor_direction_pin1": 19,
    "motor_direction_pin2": 20,
    "servo_pin": 21,
    "start_button_pin": 2,
