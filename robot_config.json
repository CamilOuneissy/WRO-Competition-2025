    "orange": {
      "hue_ranges": [[10, 25]],
      "sat_range": [100, 255],
      "val_range": [100, 255],
      "min_area": 300
    },
    "blue": {
      "hue_ranges": [[100, 130]],
      "sat_range": [100, 255],
      "val_range": [100, 255],
      "min_area": 300
    },
    "magenta": {
      "hue_ranges": [[140, 170]],
      "sat_range": [100, 255],
      "val_range": [100, 255],
      "min_area": 300
    }
  },
  "debug": {
    "log_level": "INFO",
    "enable_gui": true,
    "save_images": false,
    "log_sensors": true
